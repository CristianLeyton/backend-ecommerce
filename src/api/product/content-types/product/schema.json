{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "maxLength": 50,
      "minLength": 3
    },
    "description": {
      "type": "text",
      "required": true,
      "maxLength": 500,
      "minLength": 10
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "price": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "sku": {
      "type": "string",
      "minLength": 3,
      "maxLength": 30
    }
  }
}
